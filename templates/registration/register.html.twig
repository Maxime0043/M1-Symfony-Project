{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container-lg">
  <div class="col-md-6 p-5 section mx-auto my-4">
    <h1>Inscription</h1>

    {{ form_start(registrationForm, { attr : { 'class': 'mt-4' } }) }}
      <div class="row">
        <div class="form-group col-md mt-3">
          {{ form_label(registrationForm.lastname, 'Nom') }}
          {{ form_widget(registrationForm.lastname) }}
        </div>

        <div class="form-group col-md mt-3">
          {{ form_label(registrationForm.firstname, 'Pr√©nom') }}
          {{ form_widget(registrationForm.firstname) }}
        </div>
      </div>

      <div class="form-group col-md mt-3">
          {{ form_label(registrationForm.email, 'Email') }}
          {{ form_widget(registrationForm.email) }}
      </div>

      <div class="form-group col-md mt-3">
        {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
        {{ form_widget(registrationForm.plainPassword) }}
      </div>

      <button class="btn btn-primary mt-4">S'Inscrire</button>
    {{ form_end(registrationForm) }}
  </div>
</div>
{% endblock %}
