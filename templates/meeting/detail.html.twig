{% extends 'base.html.twig' %}

{% block title %}Détails d'une journée découverte{% endblock %}

{% block body %}
	<div class="container-md">
		<div class="row mt-5">
			<div class="col-md-2">
				<a class="btn btn-primary" href="{{url('meeting.index')}}" role="button">Retour</a>
			</div>
		</div>

		<div class="section mt-4">
			<div class="row mt-3">
				<div class="col-md-4">
						<h1>{{ meeting.title }}</h1>
						<p>Journée découverte proposé par {{ meeting.climber.lastname }} {{ meeting.climber.firstname }}</p>
						<h4>Le {{ meeting.date | date("d/m/Y") }}</h4>
						<h5>à {{ meeting.date | date("H:i") }}</h5>
				</div>
				<div class="col-md-4">
					<img src="../icons/{{ meeting.level.name | lower }}.png" alt="" height="75" />
				</div>

				<div class="col-md-4">
					<img class="card-img-top"
							src="{{ meeting.picture }}"
							alt="Card image cap"
							style="object-fit: contain"
							height='250'
					/>
				</div>
			</div>

			<div class="row mt-1">
					<h2>Description</h2>
					<p>{{ meeting.description }}</p>
			</div>

			<div class="row mt-1">
				<div class="col-md-1">
					<a class="btn btn-success" href="{{url('climber.participate', { id: meeting.id} )}}">S'inscrire</a>
				</div>
			</div>
		</div>

		<div class="section my-4">
			<h2>Commentaires</h2>

			<ul class="list-group list-group-flush mt-2">
				<li class="list-group-item">
					<div>
						<h3>Jean-Marie</h3>
