{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

	<div class="container-md">
		<div class="row mt-5">
			<div class="col-md-2">
				<a class="btn btn-primary" href="{{url('meeting.add')}}" role="button">Ajouter</a>
			</div>
		</div>

		<div class="row mt-3">
			{% for meeting in meetings %}
				<div class="col-md-4 mb-3 d-flex align-items-stretch">
						<div class="card w-100">
							<img class="card-img-top"
									src="{{ meeting.picture }}"
									alt="Card image cap"
									style="object-fit: cover"
									height='200'
							/>
								<div class="card-body d-flex flex-column">
										<h4 class="card-title">{{ meeting.title }}</h4>

											<p>Crée par {{ meeting.climber.firstname }} {{ meeting.climber.lastname }}</p>


										<div class="d-flex mt-auto">
												<a class="btn btn-primary me-2" href="#">Détails</a>
												{# <form method="POST" action="">
														@csrf
														@method('DELETE')
														<button type="submit" class="btn btn-danger">Supprimer</button>
												</form> #}
										</div>
								</div>
						</div>
				</div>
			{% endfor %}
	</div>
		
	</div>
	
{% endblock %}