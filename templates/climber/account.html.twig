{% extends "base.html.twig" %}

{% block title %}Mon Compte{% endblock %}

{% block body %}
<div class="container-lg">
  <div class="col-md-10 mx-auto my-5">
    <h1>Mon Compte</h1>

    <div class="row mt-4">
      <div class="col-md section d-flex flex-column align-items-center justify-content-center me-2">
        <h2 class="mb-0">{{ app.user.lastname }}</h2>
        <h2 class="mt-0">{{ app.user.firstname }}</h2>

        <img src="./icons/{{ picture }}.png" alt="" height="75" />
      </div>

      <div class="col-md-8">
        <div class="section">
          <table class="table">
            <tbody>
              <tr>
                <th scope="row">Nom</th>
                <td>{{ app.user.lastname }}</td>
              </tr>
              
              <tr>
                <th scope="row">Prénom</th>
                <td>{{ app.user.firstname }}</td>
              </tr>

              <tr>
                <th scope="row">Email</th>
                <td>{{ app.user.email }}</td>
              </tr>

              <tr>
                <th scope="row">Nombre de points</th>
                <td>{{ app.user.points }}</td>
              </tr>
            </tbody>
          </table>
        </div>

